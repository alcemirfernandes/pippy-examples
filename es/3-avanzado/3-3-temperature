a = raw_input("Convertir de Fahrenheit o centígrados (f/c): ")
if a.startswith('f'):
    c = input("Grados centígrados: ")
    f = (c*9)/5 + 32
    print c, "grados centígrados =", f, "grados Fahrenheit"
elif a.startswith('c'):
    f = input("Grados Fahrenheit: ")
    c = (f-32)*5/9
    print f, "grados Fahrenheit =", c, "grados centígrados"
else:
    print "Por favor, eliga 'f' o 'c'."
